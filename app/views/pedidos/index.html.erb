<h1>Listing pedidos</h1>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Empresa</th>
      <th>Cantidad</th>
      <th>Descripcion</th>
      <th>Fchrealizacion</th>
      <th>Plazoenvio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pedidos.each do |pedido| %>
      <tr>
        <td><%= pedido.empresa %></td>
        <td><%= pedido.cantidad %></td>
        <td><%= pedido.descripcion %></td>
        <td><%= pedido.fchRealizacion %></td>
        <td><%= pedido.plazoEnvio %></td>
        <td><%= link_to 'Show', pedido %></td>
        <td><%= link_to 'Edit', edit_pedido_path(pedido) %></td>
        <td><%= link_to 'Destroy', pedido, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

